<h1><%= @cocktail.name %></h2>
<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> cl. -
      <%= dose.ingredient.name %> -
      <%= link_to '(remove)',
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>
