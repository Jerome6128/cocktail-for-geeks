<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Find a geek name for your cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-success text-white" %>
      <% end %>
    </div>
  </div>
</div>
