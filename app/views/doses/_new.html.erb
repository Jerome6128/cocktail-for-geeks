<hr>
<h2>Add a new dose </h2>
<hr>
<%= simple_form_for [cocktail, dose] do |f| %>
  <%= f.association :ingredient, input_html: { class: 'select2'}, include_blank: false, include_hidden: false %>
  <%= f.input :description, collection: 1..5 %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
